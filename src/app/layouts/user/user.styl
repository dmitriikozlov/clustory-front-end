@import './../../../assets/stylus/_settings'

.user-layout-wrapper
    height: 100vh;
    overflow hidden

.main
    height 100%
    overflow-y auto
    width 'calc(100% - %s)' % sidebar-width-mobile
    -webkit-transition-property: all; /* Safari */
    -webkit-transition-duration: transition-time; /* Safari */
    transition-property: all;
    transition-duration: transition-time;
    
.expanded .main
    width 'calc(100% - (%s + %s))' % (sidebar-width-mobile innersidebar-width-mobile)

.main-content{
    margin-right:main-content-side-padding;
    margin-left:main-content-side-padding;
    hr{
        margin:30px 0;
        display:block;
    }
    h1,h3{
        font-family:font, sans-serif;
        margin-top:0px;
        font-weight:300;
    }
    h1{
        font-size:30px;
    }
    h3{
        font-size:20px;
    }

    h1.pageTitle{
        font-size:30px;
        color:text-light-color;
        text-shadow:0px 1px 2px #3e3e3e;
        font-family:light-font;
        font-weight: normal;
        text-transform: uppercase;
        margin-top:0px;
    }
    .notification,
    .notification-error,.el-alert--error{
        border:1px solid #fcb322;
        color:#c48405;
        border-radius:5px;
        padding:10px;
        font-size:12px;
        display:inline-block;
        background:#ffe8bb;
        margin-bottom:15px;
        width:100%;
        a{
            text-decoration:none;
            font-weight:bold;
            color:#88b643;
        }

    }
    .notification-error,.el-alert--error{
        background:#ffd2ce;
        border:1px solid #ff6c60;
        color:#bd1f13;

    }
}

@media(min-width desktop-breakpoint) 
    .main
        width 'calc(100% - %s)' % sidebar-width-desktop
    
    .expanded .main
        width 'calc(100% - (%s + %s))' % (sidebar-width-desktop innersidebar-width-desktop)